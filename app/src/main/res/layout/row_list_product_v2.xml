<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/layMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/gray6" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:maxLines="1"
                android:text="@string/app_name"
                android:textColor="@color/gray1"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvProductDescrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvProductName"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@color/gray2"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/ivPlaceHolder"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/tvProductDescrp"
                android:src="@color/gray5"  />

            <ImageView
                android:id="@+id/ivProductImg"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/tvProductDescrp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivProductImg">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tvProductPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:text="123"
                        android:textColor="@color/yellow"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tvProductCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/qar"
                        android:textColor="@color/gray2"
                        android:textSize="10dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/ivProductIsFavorite"
                    android:layout_width="40dp"
                    android:layout_height="37dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_heart_empty" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>